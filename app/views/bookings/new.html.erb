<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
   <h1 class="display-1 pt-5">Mes demandes</h1>
  </div>
</div>

<div class="container">
  <h1>Ma demande de réservation pour <%= @product.title %></h1>
  <p>Produit : <%= @product.title %></p>
  <p>Description : <%= @product.description %>
    <div class="row">
      <%= simple_form_for [@product, @booking] do |f| %>
      <div class="col-4">
        <%= f.input :start_date, label: 'Date de début souhaitée', as: :date, order: [:day, :month, :year]  %>
      </div>
      <div class="col-4">
        <%= f.input :end_date, label: 'Date de fin souhaitée', as: :date, order: [:day, :month, :year] %>
      </div>
      <div class="col-4">
        <%= f.submit "Faire une demande", class: "btn btn-success" %>

      </div>
      <% end %>
    </div>
</div>
