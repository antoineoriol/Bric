<%= link_to product do %>
  <% if product.photo.key.nil? %>
    <%= image_tag "no-image.png", class:"img-fluid width: 100% height: auto" %>
  <% else %>
    <%= cl_image_tag product.photo.key, crop: :fill, class:"img-fluid width: 100% height: auto" %>
  <% end %>
  <div class="map-card">
    <p><span class="font-weight-bold" style="font: size 15px;"><i class="fa fa-location-arrow"></i></span>  <%= product.address %> <strong></strong></p>
    <p><span class="font-weight-bold" style="font-size:15px;"><i class="fa fa-user"></i></span>  <%= product.title %> </p>
    <p>â‚¬/semaine <span class="font-weight-bold" style="font-size:30px; text-align:right; font-family:"><%= product.price %></span></p>
  </div>
<% end %>
